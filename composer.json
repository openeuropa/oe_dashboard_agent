{
    "name": "openeuropa/oe_dashboard_agent",
    "description": "OpenEuropa Dashboard Agent.",
    "type": "drupal-module",
    "license": "EUPL-1.2",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.3",
        "drupal/core": "^8.9 || ^9.1"
    },
    "require-dev": {
        "composer/installers": "~1.5",
        "drupal/core-composer-scaffold": "^8.9 || ^9",
        "drupal/config_devel": "~1.2",
        "drupal/datetime_testing": "dev-3217303-drupal-9-compatibility",
        "drupal/drupal-extension": "~4.0",
        "drush/drush": "^10.3",
        "openeuropa/code-review": "~1.6",
        "phpspec/prophecy-phpunit": "^1 || ^2",
        "openeuropa/drupal-core-require-dev": "^8.9 || ^9",
        "openeuropa/task-runner-drupal-project-symlink": "^1.0"
    },
    "_readme": [
        "drupal/datetime_testing is used from D9 compatibility issues fork"
    ],
    "scripts": {
        "post-install-cmd": "./vendor/bin/run drupal:site-setup",
        "post-update-cmd": "./vendor/bin/run drupal:site-setup"
    },
     "repositories": [
        {
            "type": "vcs",
            "url": "https://git.drupalcode.org/issue/datetime_testing-3217303"
        },
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "autoload": {
        "psr-4": {
            "Drupal\\oe_dashboard_agent\\": "./src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Drupal\\Tests\\oe_dashboard_agent\\": "./tests/src/"
        }
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "enable-patching": true,
        "installer-paths": {
            "build/core": ["type:drupal-core"],
            "build/profiles/contrib/{$name}": ["type:drupal-profile"],
            "build/modules/contrib/{$name}": ["type:drupal-module"],
            "build/themes/contrib/{$name}": ["type:drupal-theme"]
        },
        "drupal-scaffold": {
            "locations": {
                "web-root": "./build"
            }
        }
    },
    "config": {
        "sort-packages": true
    }
}
